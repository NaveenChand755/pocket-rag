{
  "name": "pocket-rag",
  "module": "src/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --bun run src/index.js",
    "start": "node --import tsx src/index.js",
    "mcp": "bun run src/mcp.ts",
    "test": "bun test",
    "test:unit": "bun test src/utils/__tests__/*.test.ts src/services/search/__tests__/*.test.ts",
    "test:integration": "bun test src/routes/__tests__/*.test.ts",
    "test:watch": "bun test --watch",
    "build": "bun build src/index.js --outdir dist --target node"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tsx": "^4.21.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@elysiajs/cors": "^1.4.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "elysia": "^1.4.19",
    "openai": "^6.15.0",
    "pdf-parse": "1.1.1",
    "sqlite-vec": "^0.1.7-alpha.2",
    "zod": "^4.2.1"
  }
}
